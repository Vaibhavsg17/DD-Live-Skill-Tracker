{
    "manifest_version": 3,
    "name": "Tech Skill Tracker",
    "version": "1.0",
    "description": "Tracks and quantifies technology skills based on browsing habits.",
    "permissions": [
        "tabs",
        "storage",
        "webNavigation",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}